@import 'jeet'
@import 'rupture'
@import 'client/colors'
@import 'client/fonts'
@import 'main'

//edit()

//Upper navigation section
nav
  height upperSplit
  bgImage(pattern)
  box-shadow inset 5px -2px 5px 0px rgba(0,0,0,0.11)
  level(2)
  padding-left 3%
  
  .card
    col(1/7)
    level(2)
    height 100%
    
    .icon
      transition border-color 0.6s, width 0.6s, height 0.6s, margin 0.6s, background 0.8s
      margin-left 31%
      margin-top 38%
      width 2rem
      height 2rem
      border-radius 500px
      border solid 0.3rem perDk
      background perDk
      +below(960px)
        margin-top 40%
        width 20px
        height 20px
        border-width 0.2rem
      +below(800px)
        margin-top 35%
        width 15px
        height 15px
        border-width 0.2rem
        
    .icon.viewed
      border-color perLt
      background perLt
      
    .icon.active
      border-color perLt
      background white
      
  .logo
    col(1/7)
    level(2)
    background-image url(logo.png)
    background-size contain
    background-repeat no-repeat
    background-position center
    left -2%
    top 30%
    height 40%
      
  .line
    width 72%
    level(1)
    border-radius 50px
    margin-left 5%
    height 0.4rem
    background perDk
    position absolute
    top 48%
    +below(960px)
      top 49%
      height 0.2rem
    +below(800px)
      height 0.2rem
      top 45.5%
    
    .fill
      background perLt
      width 0%
      height 100%
      transition width 0.6s easeOut