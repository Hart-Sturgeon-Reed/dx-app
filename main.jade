template(name="layout")
  head
    title dx-app
    
  meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
  meta(name="mobile-web-app-capable" content="yes")

  body
    +sidebar
    +main
//Left side of app, qr scanner & badges    
template(name="sidebar")
  .sidebar
    .qr
      +qrScanner(facing="environment")
    .badges
      .badge#nature
      .badge#performance.active
      .badge#fashion
      .badge#ethnography
//Right side of app, navigation icons & content  
template(name="main")
  .content
    +nav
    .panes
      +yield "content"
//Animated nav menu  
template(name="nav")
  nav
    .line
      .fill
    .card#card1(num='0')
      .icon
    .card#card2(num='1')
      .icon
    .card#card3(num='2')
      .icon
    .card#card4(num='3')
      .icon
    .card#card5(num='4')
      .icon
    .card#card6(num='5')
      .icon
    .logo