@import 'jeet'
@import 'rupture'
@import 'client/colors'

//edit()
  
body
  font-family 'Droid Sans'
  position absolute
  overflow hidden
  width 100%
  height 100%
  margin 0

  
//Set divisions between sections of page
upperSplit = 19.2%
lowerSplit = 100% - upperSplit

leftSplit = 1/7
rightSplit = 1 - leftSplit

//Assign a class to have a full-size background image
bgImage(image)
  url = image + '.jpg'
  background-image url(url)
  background-size cover
  background-position bottom
  
thinLine(clr)
  border-top solid 5px clr
  
level(lvl)
  z-index lvl
  position relative

//Left sidebar with QR & badges
.sidebar
  span(leftSplit)
  height 100%
  level(3)
  
  //QR canvas
  .qr
    height upperSplit
    background ethnographyLt
    
  //Contains badges
  .badges
    height lowerSplit
    bgImage(ethnography)
    level(4)
    
//Right side of app, contains nav and content panes
.content
  span(rightSplit)
  height 100%

//Upper navigation section
nav
  height upperSplit
  bgImage(pattern)
  box-shadow inset 5px -2px 5px 0px rgba(0,0,0,0.11)
  level(2)
  
.panes
  width 600%
  height 100%
  left 0
  level(1)
  
.pane
  span(1/6)
  height 100%