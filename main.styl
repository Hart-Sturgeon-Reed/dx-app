@import 'jeet'
@import 'rupture'
@import 'client/util'
@import 'client/colors'
@import 'client/fonts'

//edit()
  
body
  font-family 'Unica'
  position absolute
  overflow hidden
  width 100%
  height 100%
  margin 0

  
// Set divisions between sections of page
upperSplit = 19.2% // Change this to alter ratio between top & bottom sections [percent]
lowerSplit = 100% - upperSplit

mobileSplit = 16%
mobileLower = 100% - mobileSplit

leftSplit = 1/7 // Change this to alter ratio between left & right sections [fraction]
rightSplit = 1 - leftSplit

// Left sidebar with QR & badges
.sidebar
  span(leftSplit)
  height 100%
  level(3)
  
  // QR canvas
  .qr
    height upperSplit
    background coolGrey
  .qr.eth
    background ethLt
  .qr.per
    background perLt
  .qr.nat
    background natLt
  .qr.fas
    background fasLt
    
  // Sidebar with image & badges
  .badges
    height lowerSplit
    background coolGrey
    // box-shadow 4px 0px 5px 0px rgba(0,0,0,0.11) //Optional drop shadow on sidebar
    level(4)
    
    .badge
      position relative
      top 5%
      width 80%
      margin-left 18%
      height 20%
      margin-bottom 10%
      background-size contain
      background-repeat no-repeat
  
  // Sidebar themes
  .badges.eth
    bgImage(ethnography)
  .badges.per
    bgImage(performance)
  .badges.nat
    bgImage(nature)
  .badges.fas
    bgImage(fashion)

// Badge states
#nature
  background-image url(badges/nature_0.png)
#performance
  background-image url(badges/performance_0.png)
#performance.active
  background-image url(badges/performance.png)
#fashion
  background-image url(badges/fashion_0.png)
#ethnography
  background-image url(badges/ethnography_0.png)
#ethnography.active
  background-image url(badges/ethnography.png)
        
// Right side of app: contains nav and content panes [nav is in separate nav.styl file]
.content
  span(rightSplit)
  height 100%
    
.panes
  width 600%
  height 100%
  left 0
  level(1)
  
.pane
  span(1/6)
  height 100%